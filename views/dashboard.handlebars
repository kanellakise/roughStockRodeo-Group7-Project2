<section class="">
    <h2>Create New Post</h2>

    <form class="new-post-form box">
        <div class="field">
           {{!-- <input class="label is-half-width" for="post-name">Name</input>--}}
           {{!-- <input class="label is-primary is-half-width" type="text" id="post-name" name="post-name" /> --}}
           <input type="text" id="name" placeholder="First Name" />
        </div>
        <div class="select">
            <select for="post-event" class="is-focused">
                <option>Bareback</option>
                <option>SaddleBronc</option>
                <option>Bullriding</option>
            </select>
        </div>
        <button type="submit" class="btn button is-primary">Create</button>
    </form>
</section>

{{!-- {{#if posts.length}} --}}
<section style="background-color:aqua" class="">
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>Name: {{post.name}}</li>
        <li>Event: {{post.event}}</li>
        <li>
            <a href="/dashboard/edit/{{post.id}}" class="edit-event">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{!-- {{/if}} --}}

<script src="/javascript/add-post.js"></script>