    <script src="https://kit.fontawesome.com/44ffeca87b.js" crossorigin="anonymous"></script>

    <title>Rough Stock Rodeo</title>

</head>

<body>
    <!--Added background image with styling -->
    <style>
        body {
            background-image: url("https://multifiles.pressherald.com/uploads/sites/10/2021/07/25525314_20210723-PBR-002.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
    </style>
    <section class="hero is-fullheight">
        <header>
            <!-- <h1><em><strong>Rough Stock Rodeo</strong></em></h1>-->
            <h1 class="title is-1 is-left has-text-primary">Rough Stock Rodeo</h1>
            <!--<h3><strong>Where it pays to play Rough!</strong></h3>-->
            <h3 class="title is-2 has-text-danger has-text-right"><strong>Where it pays to play Rough!</strong></h3>
            <div class="hero-body">
                <div class="">
                    <p class="title">
                    <nav>
                        {{#if loggedIn}}
                        <a href="/dashboard">Dashboard</a>
                        <button id="logout" class="">Logout</button>
                        {{else}}
                        <a href="/login">Login</a>
                        {{/if}}
                    </nav>
        </header>

        <main>

            <section id="About ">
                <h2 class="title is-2 has-text-centered has-text-link"><strong>About Rough Stock</strong></h2>
                <p1 class="text has-text-danger-light">Rough stock is a term that describes 3 events in Rodeo-
                    Bullriding, Bareback <br>
                    riding and Saddle Bronc riding.
                    Rough stock is considered by many to be the most<br>
                    physically demanding events in rodeo. </p1>
            </section>
            <br><br>

            <section id="coming to your City">
                <h2 class="title is-2 has-text-right has-text-link"><strong>Coming to your city</strong></h2>
                <p2 class="text has-text-danger-light">Please check back for event updates in your area</p2>
            </section><br><br><br>

            {{{ body }}}

        </main>
        </p>
        </div>
        </div>
    </section>


    <footer></footer>

    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}

